{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "CoinWave",
  "colors": {
    "primary": "#3B82F6",
    "light": "#60A5FA",
    "dark": "#2563EB"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "groups": [
      {
        "group": "Getting Started",
        "pages": [
          "index",
          "signup",
          "dashboard",
          "master-wallets"
        ]
      },
      {
        "group": "Core Features",
        "pages": [
          "twitter-tracker",
          "deploying-tokens",
          "presets",
          "wallet-groups"
        ]
      },
      {
        "group": "Account",
        "pages": [
          "settings",
          "rewards"
        ]
      },
      {
        "group": "Support",
        "pages": [
          "faqs"
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Website",
          "href": "https://coinwave.gg",
          "icon": "globe"
        },
        {
          "anchor": "Dashboard",
          "href": "https://app.coinwave.gg",
          "icon": "rocket"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@coinwave.gg"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://app.coinwave.gg"
    }
  },
  "appearance": {
    "default": "dark",
    "strict": true
  },
  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude",
     "perplexity",
     "mcp",
     "cursor",
     "vscode"
   ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/coinwavegg",
      "github": "https://github.com/coinwave"
    }
  }
}
